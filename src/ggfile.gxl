        </start>
        <attr name = "cwd">
        ptr = get_curdir ();
        strncpy (line_buffer, ptr, LINE_MAX);
        line_buffer [LINE_MAX] = 0;
        mem_free (ptr);
        assign_string (& value, line_buffer);
        </attr>
        <finish>
    return & value;
        </finish>
