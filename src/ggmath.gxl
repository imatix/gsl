<class name = "math" title = "Math Functions" >

<!-------------------------------------------------------------------------->

<function name = "abs" >
    <parameter name = "parm" pass = "value" compulsory = "1" />
<body>
  {
    number_value (&parm-> value);

    if (parm-> value. type == TYPE_NUMBER)
      {
        result-> value. type = TYPE_NUMBER;
        result-> value. n    = fabs (parm-> value. n);
      }
    return 0;
  }
</body>
</function>

