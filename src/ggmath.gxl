<!-------------------------------------------------------------------------->

<function name = "asinh" >
    <parameter name = "parm" pass = "value" compulsory = "1" />
<body>
  {
    number_value (&parm-> value);

    if (parm-> value. type == TYPE_NUMBER)
      {
        result-> value. type = TYPE_NUMBER;
        result-> value. n    = -log (
            sqrt (parm-> value. n * parm-> value. n + 1)
            - parm-> value. n
        );
      }
    return 0;
  }
</body>
</function>

<!-------------------------------------------------------------------------->

<function name = "acosh" >
    <parameter name = "parm" pass = "value" compulsory = "1" />
<body>
  {
    number_value (&parm-> value);

    if ((parm-> value. type == TYPE_NUMBER)
    && (parm-> value. n >= 1))
      {
        result-> value. type = TYPE_NUMBER;
        result-> value. n    = log (
            sqrt (parm-> value. n * parm-> value. n - 1)
            + parm-> value. n
        );
      }
    return 0;
  }
</body>
</function>

<!-------------------------------------------------------------------------->

<function name = "atanh" >
    <parameter name = "parm" pass = "value" compulsory = "1" />
<body>
  {
    number_value (&parm-> value);

    if ((parm-> value. type == TYPE_NUMBER)
    && (parm-> value. n &lt; 1))
      {
        result-> value. type = TYPE_NUMBER;
        result-> value. n    = log (
            (1 + parm-> value. n) /
            (1 - parm-> value. n)
        ) / 2;
      }
    return 0;
  }
</body>
</function>

